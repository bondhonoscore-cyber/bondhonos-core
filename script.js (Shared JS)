// Default frontend values
let month4Unlocked = true;
let realEarning = 120;
let tasksCompleted = "3 / 10";
let upcomingTasks = 2;

// Load dashboard values
function loadDashboard() {
  if(month4Unlocked){
    document.getElementById('user-earning').innerText = `$${realEarning}`;
    document.getElementById('tasks-completed').innerText = tasksCompleted;
    document.getElementById('upcoming-tasks').innerText = upcomingTasks;
  }
}

// Save values from Admin Panel
function saveAdmin() {
  month4Unlocked = document.getElementById('month4').checked;
  realEarning = Number(document.getElementById('earning').value);
  tasksCompleted = document.getElementById('tasks').value;
  upcomingTasks = Number(document.getElementById('upcoming').value);
  alert("Dashboard updated!");
  loadDashboard();
}

// Load dashboard on page load
if(document.getElementById('user-earning')){
  loadDashboard();
}
